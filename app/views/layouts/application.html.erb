<!DOCTYPE html>
<html>
  <head>
    <title>ArtOfficial</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="//maps.google.com/maps/api/js?v=3.23&key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>"></script>

    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js">
    </script>

    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'>
    </script> <!-- only if you need custom infoboxes -->

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Bungee|Nova+Mono|Roboto+Mono:400,700i|Questrialcss|Changa+One|Rock+Salt|Libre+Franklin:900|Titillium+Web:900" rel="stylesheet">

    <!-- Select-React -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.1.0/react.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.1.0/react-dom.min.js"></script>
    <script src="https://unpkg.com/classnames/index.js"></script>
    <script src="https://unpkg.com/react-input-autosize/dist/react-input-autosize.js"></script>
    <script src="https://unpkg.com/react-select/dist/react-select.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/react-select/dist/react-select.css">

    <!-- touch zooming for mobile with bootstrap -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

      <% if Rails.env.development? %>
        <script src="http://localhost:3808/webpack-dev-server.js"></script>
      <% end %>
  </head>

  <body class='home-bg'>

    <%= yield %>

    <%= javascript_include_tag *webpack_asset_paths('application') %>
  </body>
</html>
